{
  "manifest_version": 3,
  "name": "Impuestito: precio final juegos con impuestos",
  "description": "Te dice el precio final y con impuestos de los juegos de Playstation, Xbox, Nintendo, Epic, GOG y m√°s tiendas. (Argentina)",
  "version": "1.14",
  "side_panel": {
    "default_path": "config/sidepanel.html"
  },
  "action": {
    "default_title": "Click to open panel"
  },
  "background": {
    "service_worker": "core/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "alarms",
    "sidePanel"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.playstation.com/*",
        "*://*.xbox.com/*",
        "*://*.nintendo.com/*",
        "*://*.epicgames.com/*",
        "*://*.gog.com/*",
        "*://*.ubisoft.com/*",
        "*://*.ea.com/*",
        "*://*.xbdeals.net/*",
        "*://*.psdeals.net/*",
        "*://*.ntdeals.net/*",
        "*://*.dekudeals.com/*",
        "*://*.steampowered.com/*",
        "*://*.humblebundle.com/*",
        "*://*.greenmangaming.com/*",
        "*://*.fanatical.com/*",
        "*://*.isthereanydeal.com/*",
        "*://*.battle.net/*",
        "*://*.amazon.com/*",
        "*://*.tiendamia.com/*",
        "*://*.aliexpress.com/*",
        "*://*.alibaba.com/*",
        "*://*.bestbuy.com/*",
        "*://*.walmart.com/*",
        "*://*.g2a.com/*",
        "*://*.instant-gaming.com/*",
        "*://*.eneba.com/*",
        "*://*.gamivo.com/*",
        "*://*.digitalworldpsn.com/*",
        "*://*.bonoxs.com/*"
      ],
      "css": [
        "config/config.css",
        "prices/prices.css",
        "gamepass/gamepass.css"
      ],
      "js": [
        "core/index.js",
        "core/helpers.js",
        "config/menu.js",
        "prices/playstation.js",
        "prices/xbox.js",
        "prices/nintendo.js",
        "prices/epic.js",
        "prices/gog.js",
        "prices/ubisoft.js",
        "prices/ea.js",
        "prices/xbdeals.js",
        "prices/psdeals.js",
        "prices/ntdeals.js",
        "prices/dekudeals.js",
        "prices/steam.js",
        "prices/humble-bundle.js",
        "prices/green-man-gaming.js",
        "prices/isthereanydeal.js",
        "gamepass/index.js",
        "gamepass/menu.js",
        "gamepass/steam.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "" ],
      "matches": [ "https://*/*" ]
    }
  ],
  "icons": {
    "16": "/assets/icon16.png",
    "32": "/assets/icon32.png",
    "48": "/assets/icon48.png",
    "128": "/assets/icon128.png"
  }
}