{
  "name": "Impuestito: precio final juegos con impuestos",
  "description": "Conocé el precio final de los juegos de Playstation, Xbox, Nintendo y Epic, GOG y más! (Precio final con impuestos Argentina)",
  "version": "1.11",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["css/styles.css"],
      "js": [
        "js/index.js",
        "js/helpers.js",
        "js/gaming/playstation.js",
        "js/gaming/xbox.js",
        "js/gaming/nintendo.js",
        "js/gaming/epic.js",
        "js/gaming/gog.js",
        "js/gaming/ubisoft.js",
        "js/gaming/ea.js",
        "js/gaming/xbdeals.js",
        "js/gaming/psdeals.js",
        "js/gaming/ntdeals.js",
        "js/gaming/dekudeals.js",
        "js/gaming/steam.js",
        "js/gaming/humble-bundle.js",
        "js/gaming/green-man-gaming.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "/assets/icon16.png",
    "32": "/assets/icon32.png",
    "48": "/assets/icon48.png",
    "128": "/assets/icon128.png"
  }
}
